// Improved HTML Code
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Game</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
        }
        #gameArea {
            position: relative;
            height: 100vh;
            background-color: #f0f0f0;
        }
        .clickable {
            cursor: pointer;
        }
    </style>
</head>
<body>
<div id="gameArea"></div>
<script>
    const gameArea = document.getElementById('gameArea');
    let gameObjects = [];

    function createGameObject() {
        const obj = document.createElement('div');
        obj.classList.add('clickable');
        obj.style.width = '50px';
        obj.style.height = '50px';
        obj.style.backgroundColor = 'blue';
        obj.style.position = 'absolute';
        obj.style.left = Math.random() * (window.innerWidth - 50) + 'px';
        obj.style.top = Math.random() * (window.innerHeight - 50) + 'px';

        obj.addEventListener('click', function() {
            // Feedback on click
            alert('Object Clicked!');
            obj.remove(); // Remove object after click
        });

        gameArea.appendChild(obj);
        gameObjects.push(obj);
    }

    function resizeHandler() {
        // Handle window resize
        gameObjects.forEach(obj => {
            const rect = obj.getBoundingClientRect();
            if (rect.right > window.innerWidth) {
                obj.style.left = (window.innerWidth - rect.width) + 'px';
            }
            if (rect.bottom > window.innerHeight) {
                obj.style.top = (window.innerHeight - rect.height) + 'px';
            }
        });
    }

    window.addEventListener('resize', resizeHandler);

    // Create new game objects
    setInterval(createGameObject, 1000);
    resizeHandler(); // Initial check
</script>
</body>
</html>